@model SportsStore.Domain.Entities.Cart

<div id="navbar" class="navbar-collapse collapse">
    <ul class="nav navbar-nav navbar-right">
        <li><a>Your cart: @Model.Lines.Sum(x => x.Quantity) item(s)</a></li>
        <li><a>@Model.ComputeTotalValue().ToString("c")</a></li>
        @if (Model.Lines.Count() > 0)
        {
            <li class="active">@Html.ActionLink("Checkout", "Index", "Cart", new { returnUrl = Request.Url.PathAndQuery })</li>
        }
    </ul>
</div>
